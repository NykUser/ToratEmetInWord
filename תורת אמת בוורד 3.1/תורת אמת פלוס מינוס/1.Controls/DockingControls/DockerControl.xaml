<UserControl x:Class="אוצר_הספרים.DockingControls.DockerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:אוצר_הספרים.DockingControls"
             mc:Ignorable="d" 
             AllowDrop="True"
             Drop="UserControl_Drop"
             Padding="0"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:DraggableTabControl x:Name="draggableTabControl" Grid.RowSpan="2"/>
        <local:OverLayPane x:Name="overlayPane" Grid.Row="1" Visibility="Collapsed"/>
    </Grid>
</UserControl>
